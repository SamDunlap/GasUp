@page "/"
<div >

    

    <div>
        <div style="display: flex; height: 8vh; width: 100%; position: fixed; background-color: #00b4a5; top: 0;align-items: center;">
            <img style="height: 45px; width: 45px; margin-left: 2vw;" src="gas-logo.png" alt="GasUp Logo">
            <h1 style="margin-left: 1vw;">GasUp</h1>
        </div>
        <div style="border-top: solid grey; margin-top: 8vh; margin-bottom: 8vh;">
            @foreach (var station in Stations)
            {
                <GasUp.Components.StationComponent Station="@station"></GasUp.Components.StationComponent>
            }
        </div>
        <div style="height: 8vh; width: 100%; position: fixed; background-color:lightgray; padding: 10px 0; color: #fff; bottom: 0; border-top: solid grey; justify-content: space-between; display: flex">
            <button @onclick="Reload" style="margin-left: 0.5em; height: 6vh;" class="btn-dark btn-lg">Refresh</button>
            
            <span style="align-items: center; justify-content: center">
                @if(SortType){
                    <span style="color:black; font-size: 1.5em; width: 60vw;"><b>Sort By: </b>Distance</span>
                }
                else
                {
                    <span style="color: black; font-size: 1.5em; width: 60vw;"><b>Sort By: </b>Price</span>
                }
            </span>
            <button @onclick="ChangeSort" style="margin-right: 0.5em; height: 6vh;" class="btn-dark btn-lg">Toggle Sort</button>
        </div>
    </div>

    

</div>